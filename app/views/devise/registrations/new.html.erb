<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="col-md-6 col-lg-4">
    <div class="card p-4 shadow-lg border-0 rounded-4">
      <h3 class="text-center mb-4 fw-bold">Sign Up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :first_name, class: "form-label fw-semibold" %>
          <%= f.text_field :first_name, autofocus: true, class: "form-control rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :last_name, class: "form-label fw-semibold" %>
          <%= f.text_field :last_name, class: "form-control rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-semibold" %>
          <% if @minimum_password_length %>
            <div class="form-text mb-1">(<%= @minimum_password_length %> characters minimum)</div>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit "Sign Up", class: "btn btn-primary fw-bold rounded-3 shadow-sm" %>
        </div>
      <% end %>

      <div class="text-center small">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
