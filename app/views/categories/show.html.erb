<h2>Category Details</h2>

<p>
  <strong>Name:</strong><br>
  <%= @category.category_name %>
</p>

<p>
  <strong>Description:</strong><br>
  <%= @category.description %>
</p>

<p>
  <strong>Owner Name:</strong><br>
  <%= "#{current_user.first_name} #{current_user.last_name}" %>
</p>

<p>
  <strong>Owner email:</strong><br>
  <%= current_user.email %>
</p>

<p>
  <strong>Created on:</strong><br>
  <%= @category.created_at.strftime("%B %d, %Y") %>
</p>

<p>
  <strong>Last updated on:</strong><br>
  <%= @category.updated_at.strftime("%B %d, %Y") %>
</p>

<% if @tasks.any? %>
  <h2>All Tasks</h2>
  <table>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  <%= render @tasks %>
  </table>
<% else %>
  <p>No task yet for this category</p>
<% end %>

<%= link_to 'Edit', edit_category_path(@category), class: "text-decoration-none" %> |
<%= link_to "Delete", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "text-decoration-none" %> |
<%= link_to 'Create New Task', new_category_task_path(@category), class: "text-decoration-none" %> |
<%= link_to 'Back to Dashboard', categories_path, class: "text-decoration-none" %>
