<%= form_with model: category do |form| %>
  <p>
    <%= form.label :category_name %><br>
    <%= form.text_field :category_name, placeholder: "Work, Personal, Learning"%>
    <% category.errors.full_messages_for(:category_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
      <%= form.submit %>
  </p>
<% end %>