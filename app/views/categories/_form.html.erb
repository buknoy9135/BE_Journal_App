<%= form_with model: category, class: "needs-validation" do |form| %>
  <div class="mb-3">
    <%= form.label :category_name, class: "form-label" %>
    <%= form.text_field :category_name, class: "form-control", placeholder: "e.g. Work, Personal, Learning" %>
    <% category.errors.full_messages_for(:category_name).each do |message| %>
      <div class="text-danger small mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div class="text-danger small mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.submit category.persisted? ? "Update Category" : "Create Category", class: "btn btn-primary" %>
  </div>
<% end %>
