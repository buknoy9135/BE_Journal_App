<%= form_with model: [category, task] do |form| %>
  <p>
    <%= form.label :task_name %><br>
    <%= form.text_field :task_name, placeholder: "Add task here" %>
    <% task.errors.full_messages_for(:task_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% task.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date, placeholder: "optional" %>
    <% task.errors.full_messages_for(:due_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :priority %><br>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p.titleize, p] }, prompt: "Select priority" %>
  </p>

  <p><%= form.submit %></p>
<% end %>
