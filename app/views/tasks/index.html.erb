<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">All Tasks (<small><%= link_to @category.category_name, category_path(@category), class: "text-muted text-decoration-none" %></small>)</h2>
        <%= link_to 'Create New Task', new_category_task_path(@category), class: "btn btn-primary" %>
      </div>

      <div class="card shadow border-primary">
        <div class="card-body">
          <% if @tasks.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle text-nowrap mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Task</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @tasks %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted">No tasks available.</p>
          <% end %>
        </div>
      </div>

      <div class="mt-4 d-flex justify-content-between">
        <%= link_to 'Back to Dashboard', categories_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>